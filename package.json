{
  "name": "infinite-sudoku",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "npm@11.4.0",
  "workspaces": [
    "apps/api",
    "apps/web",
    "packages/database",
    "packages/shared",
    "packages/trigger"
  ],
  "description": "",
  "homepage": "https://github.com/EliDevToBe/infinite-sudoku#readme",
  "bugs": {
    "url": "https://github.com/EliDevToBe/infinite-sudoku/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EliDevToBe/infinite-sudoku.git"
  },
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "scripts": {
    "dev": "turbo dev --filter=!trigger",
    "dev:web": "turbo dev --filter=web",
    "dev:api": "turbo dev --filter=api",
    "db:start": "turbo db:start --filter=database",
    "db:restart": "turbo db:restart --filter=database",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npx @biomejs/biome lint",
    "format": "npx @biomejs/biome format",
    "check": "npx @biomejs/biome check",
    "check:ts": "turbo check:ts",
    "check:fix": "npx @biomejs/biome check --write --no-errors-on-unmatched",
    "postinstall": "npm rebuild @rollup/rollup-linux-x64-gnu --optional"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@trigger.dev/build": "^4.0.2",
    "@types/node": "^22.18.1",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "lefthook": "^1.11.13",
    "pino-pretty": "^13.0.0",
    "turbo": "^2.5.4"
  },
  "dependencies": {
    "@trigger.dev/sdk": "^4.0.2",
    "typescript": "^5.9.2"
  }
}
